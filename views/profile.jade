extends layout

block menu
    +menu

block content
    .container
        h1 Profil
        .row
            .col-md-8
                if user.details
                    div.details
                        != marked( user.details )

                h2
                    | Beiträge von 
                    = user.name
                if manage
                    a.btn.btn-default(href="/profile/edit")
                        i.fa.fa-user
                        |  Profil editieren
                    |  
                    a.btn.btn-default(href="/profile/change-password")
                        i.fa.fa-key
                        |  Passwort ändern

                uls.fa-ul
                    each article in articles
                        li
                            +fa("li fa fa-file-text")
                            //- TODO: create permanent URL
                            a(href="/article/#{article.name}")
                                h3= article.title
            .col-md-4
                h1.text-center
                    +gravatar( user.emailMd5, user.name, 496 ).img-responsive
                    = user.name

