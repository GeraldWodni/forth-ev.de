extends layout

block menu
    +menu

block content
    .container
        .row
            .col-md-6
                h1
                    | Benutzer
                h4
                    | Forther die auf dieser Website herumgeistern

    .container
        .row
            each user in users
                .col-sm-6.col-md-4.col-lg-3
                    a.boxItem.user(href="/~#{user.name}")
                        +customGravatar( user.emailMd5, user.name, 48, user.avatar ).pull-left
                        .name= user.name

